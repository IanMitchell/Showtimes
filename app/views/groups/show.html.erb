<h1><%= @group.name %></h1>
<h3>Staff</h3>
<ul>
  <%- @group.members.order(:role).reverse_order.each do |member| %>
    <li><%= member.user.name %> - <%= member.title %> (<%= member.role %>)</li>
  <%- end %>
</ul>
<h3>Current Fansubs</h3>
<ul>
  <%- @group.fansubs.active.each do |fansub| %>
    <li>
      <%= fansub.show.name %> - <%= fansub.current_release.source.number %>
      <ul>
        <%- fansub.current_release.staff.each do |staff| %>
          <%- if staff.finished? %>
            <li>âœ“ <%= staff.user.name %> - <%= staff.position.name %></li>
          <%- else %>
            <li><%= staff.user.name %> - <%= staff.position.name %></li>
          <%- end %>
        <%- end %>
      </ul>
    </li>
  <%- end %>
</ul>
