    <h3><%= fansub.show.name %>  #<%= fansub.current_release.source.number %></h3>
    <h6>Aired <%= fansub.current_release.source.air_date %></h6>
    <ul>
      <%- fansub.current_release.staff.each do |staff| %>
        <%- if staff.finished? %>
          <li>âœ“ <%= staff.user.name %> - <%= staff.position.name %></li>
        <%- else %>
          <li><%= staff.user.name %> - <%= staff.position.name %></li>
        <%- end %>
      <%- end %>
    </ul>
  </div>
<% end %>
